<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controllers.YouthShovelerProfileActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/shovel_hero_logo"
        android:contentDescription="Shovel Hero Logo"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Youth Shoveller Profile"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_marginBottom="6dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgProfilePicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onUploadProfilePicture"
            android:contentDescription="Profile Picture"/>

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Information"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"/>

        <ListView
            android:id="@+id/listMyAddresses"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Profile Information"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="1dp">

    <Button
        android:id="@+id/btnViewJobs"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="View New Shovelling Jobs"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnManagePaymentInfo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Manage Payment Info"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnManageProfileInfo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Manage Profile Info"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnEditPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Edit Password"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnViewRatings"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="View Ratings"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginBottom="8dp" />

    </LinearLayout>

</LinearLayout>