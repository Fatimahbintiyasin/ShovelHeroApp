<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controllers.GuardianProfileActivity"
    android:background="#BDEDFB">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/shovel_hero_logo"
        android:contentDescription="Shovel Hero Logo"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Guardian Profile"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!--TO add: android:src=""-->
        <ImageView
            android:id="@+id/imgProfilePicture"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Guardian Profile Picture"
            android:focusable="true"
            android:onClick="onUploadProfilePicture"
            android:src="@drawable/shovel_hero_logo"
            android:scaleType="fitXY"
            android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvLastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Information"
            android:textAlignment="center"
            android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123 Address Avenue"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <!--TextView
                android:id="@+id/lblAddresses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Addresses"
                android:textAlignment="center"
                android:textColor="@color/black"/-->

            <!--androidx.recyclerview.widget.RecyclerView
                android:id="@+id/addressRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"/-->

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btnLinkedYouths"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Linked Youths"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnManageYouthInfo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Manage Youth Info"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnAddAddress"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Edit Password"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnManagePaymentInfo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Manage Payment Info"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnManageProfileInfo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Manage Profile Info and Location"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnEditPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Edit Password"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnViewYouthRatings"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="View Youth Ratings"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"/>

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewGuardian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/navmenu"/>
</LinearLayout>