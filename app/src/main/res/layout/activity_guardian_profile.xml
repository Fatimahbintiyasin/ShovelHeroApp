<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controllers.GuardianProfileActivity"
    android:background="#BDEDFB">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/shovel_hero_logo"
        android:contentDescription="Shovel Hero Logo"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Profile"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--TO add: android:src=""-->
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onUploadProfilePictureClick"
            android:contentDescription="Guardian Profile Picture"/>

        <TextView
            android:id="@+id/btnProfileInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Profile Information"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnManagePaymentInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Manage Payment Info"
            android:layout_marginBottom="8dp" />


        <Button
            android:id="@+id/btnManageLocation"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Manage Location"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnManageYouthInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Manage Youth Info"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnEditPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Edit Password"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnViewYouthRatings"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="View Youth Ratings"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnLinkedYouths"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Linked Youths"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</LinearLayout>