<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BDEDFB"
    tools:context=".Controllers.UserRegistrationActivity">

    <!--ShovelHero Logo-->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/shovel_hero_logo"
        android:contentDescription="Shovel Hero Logo"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="User Registration"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_marginBottom="16dp"/>

    <!--TO add: android:src=""-->
    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onUploadProfilePictureClick"
        android:contentDescription="Customer Profile Picture"/>


    <Spinner
        android:id="@+id/spAccountType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:entries="@array/account_types"
        android:text="Account Type"/>


    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="User Name"/>

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Password"/>


    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="First Name"/>

    <TextView
        android:id="@+id/tvLastname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Last Name"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Email"/>

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Phone Number"/>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center_horizontal"
android:layout_marginTop="24dp">

<Button
    android:id="@+id/btnOrderShoveling"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="Order Shovelling Service"
    android:layout_marginBottom="8dp" />

<Button
    android:id="@+id/btnManagePaymentInfo"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="Manage Payment Info"
    android:layout_marginBottom="8dp" />

<Button
    android:id="@+id/btnAddAddress"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="Add Address"
    android:layout_marginBottom="8dp" />


<Button
    android:id="@+id/btnEditPassword"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="Edit Password"
    android:layout_marginBottom="8dp" />

<Button
    android:id="@+id/btnViewMyRatings"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="View My Ratings"
    android:layout_marginBottom="8dp" />

</LinearLayout>
</LinearLayout>
